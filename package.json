{
  "name": "apollo-typescript-starter",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "author": "Sakihara Shinnosuke",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/index.ts",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint src --fix --ext .ts,.tsx ",
    "lint:prettier": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "test": "jest",
    "start": "ts-node src/index.ts"
  },
  "dependencies": {
    "apollo-server-express": "^2.23.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.3.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,md}": "prettier --write"
  }
}
